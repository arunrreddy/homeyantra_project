{
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "builtin": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions": true,
            "experimentalObjectRestSpread": false
        }
    },
    "globals": {
        "appRoot": false
    },
    "rules": {
        "id-length": [
            "warn",
            {
                "exceptions": [
                    "_",
                    "h",
                    "x",
                    "y",
                    "r"
                ]
            }
        ],
        "prefer-reflect": "off",
        "lodash/prop-shorthand": "off"
    }
}
